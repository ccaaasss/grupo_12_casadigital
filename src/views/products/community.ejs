<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Casa Digital', stylesheet: "/css/products.css"}) %>
<body>
    <!-- Include Header -->
    <%- include ('../partials/header.ejs') %>
  <main>
    <div class="main-contenedor">     
        <div class="div-separadores">
          <p class="separadores"><%= community %></p>
        </div>
        <div class="product-box">
          <% for (product of products) {%>
            <% if (product.course_owner == community) { 	%>
              <div class="main-categorias">
                <div class="category">
                  <a href="/products/<%= product.id %>/productDetail/"><img src="/images/products/<%= product.image %>" alt="imagen de producto"></a>
                </div>
              </div>
            <% } %>
            
          <% } %>
        </div>   
    </div>
  </main>
  <!-- Include Footer -->
  <%- include ('../partials/footer.ejs') %>
</body>
</html>