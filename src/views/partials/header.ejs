<header>
    <div class="main-header">
      <a href="/"><img src="/images/Logo.jpg" class="logo"></a>
      <nav class="main-navbar">
        <div class="navbar">
          <ul>
            <li><a href="/"><i class="fas fa-home"></i></a></li>
            <li><a href="/" class="text-nav"> Inicio</a></li>
            <li><a href="/products"><i class="fas fa-bars"></i></a></li>
            <li><a href="/products" class="text-nav"> Productos</a></li>
            <li><a href="/products/productCart"><i class="fas fa-plus"></i></a></li>
            <li><a href="/products/productCart" class="text-nav"> Mi Lista</a></li>
            <form action="/Search" class="search">
            <li><a href="#"><i class="fas fa-search"></i></a></li>
            <li><input type="text" class="text-nav-1" placeholder="Buscar" name="search" id="seach"></li>
            </form>
          </ul>
        </div>
        <% if (locals.userLogged != undefined) { %>
          <div class="login">            
            <form class="logout-form" action="/users/logout" method="POST">
              <button type="submit" class="buttons">Logout</button>
            </form>
            <a class="login" href="/users/userProfile">
            <p class="login-parrafo">Hola <b><%= locals.userLogged.first_name %></b></p>
            <img class="user-thumb" src="/images/users/<%= locals.userLogged.image %>" alt="Imagen del Usuario">
            </a>
          </div>
        <% } else { %>
          <div class="login">
            <a href="/users/login"><p class="login-parrafo">Login</p></a>
            <i class="fas fa-user-graduate"></i>
          </div>
        <% } %>
      </nav>
    </div>
    <script src="/js/header.js"></script>
  </header>